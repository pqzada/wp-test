@media(max-width 1199px)
	.todo
		#contenido
			#home
				margin-bottom 15px
@media(max-width 767px)
	.todo
		#head
			.nav
				li
					a
						text-align left
			.nav-justified
				.dropdown
					.dropdown-menu
						top 0
			.dropdown-menu
				float none
				position inherit
		#slide-home
			#slide
				.img-slide
					height 200px
					max-width none
					width auto
		#contenido
			#home
				.servicios_bloque .enunciado,
				.ofertas_bloque .enunciado
					background #CDCDCD
					padding 0 40px
					position inherit
					width 100%
					height 198px
					a
						color #8992A2
						h3
							color #8992A2
						span
							color #8992A2
@media(max-width 590px)
	.todo
		#contenido
			#home
				.servicios_bloque .enunciado,
				.ofertas_bloque .enunciado
					background rgba(0,0,0, .5)
					a
						color #fff
						h3
							color #fff
						span
							color #fff
